        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          a.nav-item.nav-link href="#"  プロフィール変更
          a.nav-item.nav-link href="#"  ログアウト
    p.notice= notice
    p.alert= alert
    = yield
