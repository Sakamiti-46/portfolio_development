= render 'records/flash_messages'
h1 レポート

canvas#myPieChart
script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"
javascript:
  var ctx = document.getElementById("myPieChart");
  var myPieChart = new Chart(ctx, {
    type: 'pie',
    data: {
      labels: gon.label,
      datasets: [{
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(50,41,227,0.2)',
            'rgba(242,68,172,0.2)'
          ],
          data:#{@record.values}
      }]
    },
    options: {
      title: {
        display: true,
        text: '練習内容の内訳（累計分数）'
      }
    }
  });

.d-flex
  .col-6.text-align: center
    = link_to '練習記録一覧に戻る', root_path, class: 'btn btn-primary'
  .col-6.text-align: center
    = link_to '練習記録を登録する', new_record_path, class: 'btn btn-primary'